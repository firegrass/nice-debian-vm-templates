{
  "builders": [
    {
      "boot_wait": "10s",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/vanilla-debian-8-jessie-preseed.cfg <wait>",
        "debian-installer=en_GB <wait>",
        "auto <wait>",
        "locale=en_GB <wait>",
        "kbd-chooser/method=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=digital.nice <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=uk <wait>",
        "keyboard-configuration/xkb-keymap=uk <wait>",
        "<enter><wait>"
      ],
      "disk_size": "10140",
      "vmdk_name": "debian8-disk0",
      "guest_os_type": "debian7-64",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "1a311f9afb68d6365211b13b4342c40b",
      "iso_checksum_type": "md5",
      "iso_url": "http://cdimage.debian.org/cdimage/release/8.1.0/amd64/iso-cd/debian-8.1.0-amd64-netinst.iso",
      "shutdown_command": "sudo /sbin/halt -p",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_port": "22",
      "ssh_wait_timeout": "10000s",
      "type": "vmware-iso",
      "tools_upload_flavor": "linux",
      "vm_name": "debian-jessie",
      "version": "8"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant-vmware-ovf",
      "compression_level": 9,
      "output": "{{.BuildName}}-{{.Provider}}.box"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "pause_before": "5s",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "override": {
        "vmware-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/vmware-ovf.sh",
            "scripts/salt-minion.sh",
            "scripts/cleanup.sh",
            "scripts/minimize.sh"
          ]
        }
      }
    }
  ]
}

